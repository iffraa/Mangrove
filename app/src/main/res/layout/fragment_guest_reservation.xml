<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.GHReservationFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/m_logo"></ImageView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_semi_bold"
                android:text="@string/reservation"
                android:textColor="@color/grey_text"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/select_resort"
                        android:textColor="@color/light_black"></TextView>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/check_in"
                        android:textColor="@color/light_black"></TextView>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/check_out"
                        android:textColor="@color/light_black"></TextView>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/available_units"
                        android:textColor="@color/light_black"></TextView>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/price"
                        android:textColor="@color/light_black"></TextView>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/guests"
                        android:textColor="@color/light_black"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/sp_resorts"
                        android:layout_width="230dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp"></Spinner>


                    <EditText
                        android:id="@+id/et_chk_in"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:inputType="none"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"></EditText>


                    <EditText
                        android:id="@+id/et_chk_out"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"></EditText>


                    <Spinner
                        android:id="@+id/sp_units"
                        android:layout_width="230dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:inputType="date"
                        android:paddingLeft="10dp"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:textSize="16sp">
                        ></Spinner>


                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"></TextView>

                    <EditText
                        android:id="@+id/et_guests_no"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/jura_demi_bold"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"></EditText>

                    <TextView
                        android:id="@+id/tv_max_guests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:textColor="@color/grey_text"></TextView>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_main"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jura_demi_bold"
                android:gravity="center_vertical"
                android:text="@string/payable"
                android:textColor="@color/light_black"></TextView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment"
                android:layout_marginTop="10dp"
                android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

            <include
                android:id="@+id/progressBar"
                layout="@layout/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"></include>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:layout_below="@+id/rv_guest"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"></Button>

        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/rl_footer"
        layout="@layout/footer"></include>

</RelativeLayout>